# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go files and modules
[{*.go,go.mod,Makefile,*.mk}]
indent_style = tab
indent_size = 4

# Markdown files (special case: preserve trailing whitespace)
[{*.md,.env,.env.example}]
trim_trailing_whitespace = false
